<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".Submeter">

    <Button
        android:layout_marginTop="600dp"
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cardview_dark_background"
        android:hint="Go Back"
        android:textColorHint="@color/white"
        android:textSize="15dp"></Button>

    <Button
        android:layout_marginTop="600dp"
        android:id="@+id/submeter"
        android:layout_width="130dp"
        android:layout_marginStart="270dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cardview_dark_background"
        android:hint="Submeter"
        android:textColorHint="@color/white"
        android:textSize="15dp"></Button>

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/introducao"
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:layout_marginTop="150dp"
            android:hint="Reconfirmar pedido:"
            android:inputType="text"
            android:padding="20dp"
            android:textColorHint="@color/white"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/serviços"
            android:layout_width="700dp"
            android:layout_height="160dp"
            android:layout_marginTop="190dp"
            android:background="@android:color/white"
            android:hint="Numero de malas:\nPeso:\nDestino:\nRecolha:\nIdentificação da Mala:IB2155\nPreço:30€"
            android:inputType="text"
            android:padding="20dp"
            android:textColorHint="@color/purple_200"
            android:textSize="17sp"></TextView>

        <TextView
            android:id="@+id/numero_malas"
            android:layout_width="200dp"
            android:layout_height="23dp"
            android:layout_marginStart="159dp"
            android:layout_marginTop="210dp"
            android:textColor="@color/purple_200"
            android:textSize="17sp"></TextView>

        <TextView
            android:id="@+id/peso"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="231dp"
            android:textColor="@color/purple_200"
            android:textSize="17sp"></TextView>

        <TextView
            android:id="@+id/Destino"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="250dp"
            android:textColor="@color/purple_200"
            android:textSize="17sp"></TextView>

        <TextView
            android:id="@+id/recolha"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="270dp"
            android:textColor="@color/purple_200"
            android:textSize="17sp"></TextView>


    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:focusable="false">


        <ImageView
            android:id="@+id/imagem"
            android:layout_width="600dp"
            android:layout_height="150dp"
            android:layout_marginStart="-100dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="00dp"
            android:layout_marginBottom="00dp"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/background"></ImageView>


        <!--<ImageView
            android:id="@+id/imagem3"
            android:layout_width="410dp"
            android:layout_height="140dp"
            android:layout_marginStart="00dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="00dp"
            android:layout_marginBottom="00dp"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/payment"></ImageView>-->


        <TextView
            android:id="@+id/asddsfsd"
            android:layout_width="425dp"
            android:layout_height="78dp"
            android:layout_marginTop="330dp"
            android:hint="Preencha dados do seu cartão de crédito:"
            android:inputType="text"
            android:padding="20dp"
            android:textColorHint="@color/black"
            android:textSize="19sp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/sfsd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:hint="Número do cartão de crédito"
            android:inputType="text"
            android:padding="20dp"
            android:textColorHint="@color/black"></EditText>

        <EditText
            android:id="@+id/dfdcs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="410dp"
            android:hint="Vencimento(MM/AA)"
            android:inputType="text"
            android:padding="20dp"
            android:textColorHint="@color/black"></EditText>
        <EditText
            android:id="@+id/dfds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="465dp"
            android:hint="Código de Segurança"
            android:inputType="text"
            android:padding="20dp"
            android:textColorHint="@color/black"></EditText>


        <EditText
            android:id="@+id/dfdccs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="520dp"
            android:hint="Nome do cartão"
            android:inputType="text"
            android:padding="20dp"
            android:textColorHint="@color/black"></EditText>


        <ImageView
            android:id="@+id/imagem4"
            android:layout_width="100dp"
            android:layout_height="100sp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="225dp"
            android:layout_marginEnd="00dp"
            android:layout_marginBottom="00dp"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/check"></ImageView>


    </FrameLayout>




</RelativeLayout>