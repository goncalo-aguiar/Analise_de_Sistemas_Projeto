<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PedidoFragment"
    android:background="@color/purple_200">


    <FrameLayout
        android:id="@+id/fl55"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/serviços"
            android:layout_width="650dp"
            android:layout_height="100dp"
            android:layout_marginTop="420dp"
            android:background="@android:color/white"
            android:textSize="@dimen/activity_horizontal_margin"
            android:hint="Estafeta:Maria Neves\nAvaliação geral: 5 estrelas\nTempo Estimado:20 min"
            android:inputType="text"
            android:padding="20dp"
            android:textColorHint="@color/purple_200"></TextView>

        <TextView
            android:textSize="16sp"
            android:id="@+id/introducao"
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:layout_marginTop="145dp"
            android:hint="Informações sobre o pedido:"
            android:inputType="text"
            android:padding="20dp"
            android:textColorHint="@color/white"></TextView>



        <ImageView
            android:id="@+id/imagem3"
            android:layout_width="410dp"
            android:layout_height="170dp"
            android:layout_marginStart="00dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="00dp"
            android:layout_marginBottom="00dp"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/maps">
        </ImageView>


        <ImageView
            android:id="@+id/imagem"
            android:layout_width="600dp"
            android:layout_height="150dp"
            android:layout_marginStart="-100dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="00dp"
            android:layout_marginBottom="600dp"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/background">
        </ImageView>


        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:textColorHint="@color/white"
            android:textSize="12dp"
            android:id="@+id/contact"
            android:hint="Contactar estafeta"
            android:gravity="center"
            android:layout_marginTop="425dp"
            android:layout_marginStart="290dp"
            android:backgroundTint="@color/cardview_dark_background"
            ></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:textColorHint="@color/white"
            android:textSize="12dp"
            android:id="@+id/cancelar"
            android:hint="Cancelar Pedido"
            android:gravity="center"
            android:layout_marginTop="470dp"
            android:layout_marginStart="290dp"
            android:backgroundTint="@color/cardview_dark_background"
            ></Button>

    </FrameLayout>



</FrameLayout>